
apiVersion: apps/v1
kind: Deployment
metadata:
  name: app-org1app0
  labels:
    app: apporg1app0
spec:
  replicas: 1
  selector:
    matchLabels:
      app: apporg1app0
  template:
    metadata:
      labels:
        app: apporg1app0
    spec:
      containers:
      - name: apporg1app0
        image: le999/app1:1.0
        ports:
        - containerPort: 3000
        env:
          - name: PORT
            value: "3000"

          - name: MONGO_URI
            value: mongodb://root:example@mongodborg1:27017/mydb



          

          - name: VALIDATOR_HOST
            value: tcp://sawtooth-org1peer0:4004
          - name: SAWTOOTH_REST
            value: http://sawtooth-org1:8008
---

apiVersion: v1
kind: Service
metadata:
  name: apporg1app0
spec:
  type: ClusterIP
  selector:
    app: apporg1app0
  ports:
    - name: "3000"
      port: 3000
      targetPort: 3000


---
